---
import type { HTMLAttributes } from 'astro/types';
export type Props = HTMLAttributes<'section'> & { id: string };

const {
  id,
  class: className,
  'class:list': classList,
  ...restProps
} = Astro.props;
---

<style>
  .section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100vw;
    height: 100%;
    min-height: 100vh;
    padding: 1rem;
    padding-top: 4rem;
    gap: 1.5rem;
  }
</style>

<section
  id={id}
  class:list={[
    'section',
    className,
    ...(Array.isArray(classList) ? classList : [classList]),
  ]}
  {...restProps}
>
  <slot />
</section>
