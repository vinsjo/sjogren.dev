---
import Section from './Section.astro';
import BlobScene from './three/BlobScene';
---

<style>
  .section#start {
    align-items: center;
    justify-content: center;
    padding: 1rem;
    height: var(--safe-viewport-height);
  }

  .start-container {
    width: 100%;
    height: 100%;
    display: grid;
    position: relative;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr;
    justify-items: center;
    align-items: center;
    padding: 0;
  }

  .caption-container,
  .blob-scene {
    min-width: 0;
    min-height: 0;
    grid-column: 1;
    grid-row: 1;
    position: relative;
  }

  .caption-container {
    width: fit-content;
    height: fit-content;
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
  }

  .caption-container .caption {
    --font-size: 1.5rem;
    font-size: var(--font-size);
    font-weight: 800;
    color: white;
    text-align: center;
    text-decoration: none;
    text-transform: lowercase;
  }

  .caption-container .caption:not(:first-child) {
    font-size: calc(var(--font-size) * 0.8);
  }

  .blob-scene {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    opacity: 0;
  }

  .blob-scene[data-loaded='true'] {
    transition: opacity 0.5s ease-in-out;
    transition-delay: 0.2s;
    opacity: 1;
  }

  [data-device-type='mobile'] .blob-scene,
  [data-device-type='tablet'] .blob-scene {
    max-height: calc(var(--safe-viewport-height) * 0.8);
  }

  @media only screen and (min-width: 700px) {
    .caption {
      --font-size: 2rem;
    }
  }
</style>

<Section id='start'>
  <div class='start-container'>
    <div class='caption-container'>
      <h1 class:list={['title', 'caption']}>Vincent Sj√∂gren</h1>
      <h3 class:list={['title', 'caption']}>Web developer</h3>
    </div>
    <BlobScene client:load className='blob-scene' />
  </div>
</Section>
