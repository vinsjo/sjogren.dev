---
import { PageSection } from '@/constants';
import Section from './Section.astro';
import BlobScene from './three/BlobScene';
---

<style>
  .section {
    align-items: center;
    justify-content: center;
    max-height: 100vh;
    padding: 1rem;
  }

  .start-container {
    width: 100vw;
    height: 100vh;
    display: grid;
    position: relative;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr;
    justify-items: center;
    align-items: center;
    padding: 0;
  }

  .caption-container,
  .blob-scene {
    min-width: 0;
    min-height: 0;
    grid-column: 1;
    grid-row: 1;
    position: relative;
  }

  .caption-container {
    width: fit-content;
    height: fit-content;
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
  }

  .caption {
    --font-size: 1.5rem;
    font-size: var(--font-size);
    font-weight: 800;
    color: white;
    text-align: center;
    text-decoration: none;
    text-transform: lowercase;
  }

  .caption:not(:first-child) {
    font-size: calc(var(--font-size) * 0.8);
  }

  .blob-scene {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0;
  }

  .blob-scene[data-loaded='true'] {
    transition: opacity 0.5s ease-in-out;
    transition-delay: 0.2s;
    opacity: 1;
  }

  [data-device='mobile'] .blob-scene {
    max-height: 80vh;
  }

  @media only screen and (min-width: 700px) {
    .caption {
      --font-size: 2rem;
    }
  }
</style>

<Section id={PageSection.Start}>
  <div data-id='start-container' class='start-container'>
    <div class='caption-container'>
      <h1 class:list={['title', 'caption']}>Vincent Sj√∂gren</h1>
      <h3 class:list={['title', 'caption']}>Web developer</h3>
    </div>
    <BlobScene client:load className='blob-scene' />
  </div>
</Section>
<script>
  if (document.documentElement.dataset.device === 'mobile') {
    let timeout: number = 0;

    const updateMaxSize = () => {
      const container = document.querySelector(
        '[data-id="start-container"]',
      ) as HTMLDivElement | null;

      if (!container) return;

      window.clearTimeout(timeout);

      timeout = window.setTimeout(() => {
        const maxWidth = window.innerWidth;
        const maxHeight = window.innerHeight;

        container.style.setProperty(
          'maxWidth',
          !maxWidth ? null : `${maxWidth}px`,
        );
        container.style.setProperty(
          'maxHeight',
          !maxHeight ? null : `${maxHeight}px`,
        );
      }, 150);
    };

    updateMaxSize();

    window.addEventListener('resize', updateMaxSize);
  }
</script>
