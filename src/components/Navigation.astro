---
import { capitalize } from '../utils/misc/string';
---

<style>
  .link-container {
    position: fixed;
    width: auto;
    height: auto;
    padding: 1rem;
    z-index: 100;
  }

  .link-container.projects {
    top: 0;
    right: 0;
  }

  .link-container.contact {
    left: 0;
    top: 0;
  }
  .link-container.start {
    bottom: 0;
    right: 0;
  }

  .link-container .link {
    font-weight: 600;
    text-transform: lowercase;
  }
</style>
<>
  {
    (['contact', 'projects', 'start'] as const).map((section) => {
      const isStart = section === 'start';
      const title = isStart ? 'To Start' : capitalize(section);
      return (
        <div class:list={['link-container', section]}>
          <a
            href={isStart ? '#' : `#${section}`}
            class:list={['title', 'link']}
          >
            {title}
          </a>
        </div>
      );
    })
  }
</>
